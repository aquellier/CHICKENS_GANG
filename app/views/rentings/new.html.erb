<div class="container">
  <div class="row text-center">

    <div class="col-sm-3 offset-sm-3">

    <%= simple_form_for [@chickens_gang, @renting] do |f| %>
      <%= f.input :start_date, as: :date, start_year: Date.today.year, order: [:day, :month, :year] %>
      <%= f.input :end_date, as: :date, start_year: Date.today.year, order: [:day, :month, :year] %>
      <%= f.submit %>
    <% end %>

    </div>

  </div>

</div>
