<%= simple_form_for(@chickens_gang) do |f| %>

<div class="col-md-6 col-md-offset-3">
  <div class="form-inputs" style="color: white">
    <%= f.input :gang_name %>
    <%= f.input :address%>
    <%= f.input :breed %>
    <%= f.input :capacity %>
    <%= f.input :year_of_birth %>
    <%= f.input :price %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions flexing-box">
    <%= f.button :submit, class: "btn btn-success" %>
    <%= link_to "Back", chickens_gangs_path, class: "btn btn-danger" %>
  </div>
</div>

<% end %>

