<div class="container">
  <h1> <%=@chickens_gang.gang_name%></h1>


  <p> Breed: <%= @chickens_gang.breed %></p>
  <p> Gang name: <%= @chickens_gang.gang_name %></p>
  <p> Capacity: <%= @chickens_gang.capacity %></p>
  <% if @chickens_gang.photo.present? %>
  <p>Photo: <%= cl_image_tag @chickens_gang.photo, height: 200, crop: :fill %></p>
  <% else %>
  <p>Photo: <%= image_tag 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS0yiRaRpABimHCHMw4cXVZKYwK0YjRhGJydn7hzi12WaM_4XknfQ' %></p>
  <% end %>
  <p> Year of birth: <%= @chickens_gang.year_of_birth %></p>
  <p> Price: <%= @chickens_gang.price %>â‚¬/day</p>


<p> Available:  <% if @chickens_gang.availability %> Yes </p> <% else %>
No </p> <% end %>

<h4>Chickens Gang Reviews</h4>

<% if !@chickens_gang.reviews.empty?  %>
  <% average = [] %>
  <% @chickens_gang.reviews.each do |review| %>
    <% average << review.rating  %>
  <% end %>
  <p> Average rating: <%= (average.reduce(:+)/average.size.to_f).round(1)  %> </p>
  <ul>
    <% @chickens_gang.reviews.each do |review| %>
      <li> Comment: <%=review.content%>, Rating: <%=review.rating%> </li>
    <% end %>
  </ul>
<% else %>
  <p>This Chicken Gang has no review yet. </p>
<% end %>

<button>
  <%= link_to "Back to Chickens Gangs",chickens_gangs_path %>
</button>

<% if current_user == @chickens_gang.owner  %>
<button>
  <%= link_to "Edit",edit_chickens_gang_path(@chickens_gang) %>
</button>

<button>
  <%= link_to "Delete",@chickens_gang, method: :delete, data: {confirm: 'Are you sure?'} %>
</button>
<% end %>



<button>
  <%= link_to "Add review",new_chickens_gang_review_path(@chickens_gang) %>
</button>

<%= link_to "Book Chicken Gang", new_chickens_gang_renting_path(@chickens_gang), class: "btn btn-danger"  %>


</div>


