<div class="chicken-wrapper">
<div class="container">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4">
    <div class="text-center">
      <h3>Log in</h3>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, placeholder: "your@email.com" %>
      <%= f.input :password, required: false, placeholder: "•••••••" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", style: "width: 100%", class: "btn btn-success" %>
    </div>
    <% end %>
    <div class="text-center">
    <%= render "devise/shared/links" %>
    </div>

  </div>
</div>



</div>
